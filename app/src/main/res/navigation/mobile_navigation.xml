<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.umashankar.localitem.ui.home.MainFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.umashankar.localitem.ui.shop.ShopFragment"
        android:label="Shop"
        tools:layout="@layout/fragment_shop" />

    <fragment
        android:id="@+id/navigation_offer"
        android:name="com.umashankar.localitem.ui.offers.OfferFragment"
        android:label="All Offers"
        tools:layout="@layout/fragment_offer" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.umashankar.localitem.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.umashankar.localitem.ui.account.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account"
        />
</navigation>
